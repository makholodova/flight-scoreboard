@model List<FlightScoreboardData.Services.Models.CityModel>  

@{
	ViewData["Title"] = "Список городов";
}
<div>

	@if (Model.Count > 0)
	{
		<h3>Список городов:</h3>
		<table>

			@foreach (var city in Model)
			{
				<tr>
					<td>@city.Name </td>
					<td>
						<a class="nav-link text-dark" asp-area="" asp-controller="City" asp-action="Delete" asp-route-id="@city.Id">Удалить</a>

					</td>
				</tr>
			}
		</table>
	}
	else
	{
		<td>Список городов пуст</td>
	}
	<a class="nav-link text-dark" asp-area="" asp-controller="City" asp-action="Create">Добавить город</a>
</div>